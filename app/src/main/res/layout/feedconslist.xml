<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtladgername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvdate"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Ledger Name"
                android:textAlignment="textStart"
                android:textColor="@color/md_light_blue_900"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtlname"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Age : "
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtlname"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="Fcr : "
                android:textAlignment="textEnd"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtamount"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Bal Bird"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtbalbrd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfage"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtvochtype"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtamount"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Feed Cons Bag"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfdbag"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtamount"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="0.00"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfeedwt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvochtype"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Feed Cons (Kg)"
                android:textAlignment="textStart"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtfdwt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvochtype"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="0.00"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtlname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtladgername"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Ledger Address"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtgrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Date"
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
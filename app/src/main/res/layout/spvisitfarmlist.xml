<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">
            <TextView
                android:id="@+id/txtpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Party Name"
                android:textColor="@color/md_light_blue_900"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtqty"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfadd"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="0"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpname"
                android:id="@+id/txtfadd"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Party Name"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lblbatch"
                android:text=""
                android:layout_below="@id/txtfadd"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:gravity="end"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtbatch"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:gravity="start"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtglcoe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfadd"
                android:id="@+id/lblbatch"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Batch No.: "
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:id="@+id/lblplqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfadd"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/txtqty"
                android:fontFamily="@font/poppinsregular"
                android:text="Age: "
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtfpqty"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtfcqty"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtbmqty"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtbsqty"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:id="@+id/txtfarmtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblbatch"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="FarmType"
                android:visibility="gone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtspname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtfarmtype"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Supervisor"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtfedcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtspname"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Feed Cons. Bag"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtmqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtspname"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Mort Qty. "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfedcons"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Place Date "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtblqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfedcons"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Bal Qty. "
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="10dp"
        android:padding="15dp"
        android:layout_toStartOf="@id/pilv2"
        style="@style/CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="10dp"
            android:id="@+id/rl"
            android:background="#dde4dd">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv1"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtfprodname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/productname"
                        android:fontFamily="@font/gothic"
                        android:textColor="#3553F5"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtfqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/quantityinbag"
                        android:fontFamily="@font/gothic"
                        android:textColor="#3553F5"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txtprodno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/gothic"
                        android:padding="5dp"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/pilv2"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/imagedelete"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_margin="10sp"
                android:background="@color/md_white_1000"
                app:srcCompat="@drawable/baseline_delete_grey_24"/>
    </LinearLayout>
</RelativeLayout>
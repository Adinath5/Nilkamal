<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">
            <TextView
                android:id="@+id/txtladgername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvochno"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="Ledger Name"
                android:textAlignment="textStart"
                android:textColor="@color/md_light_blue_900"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtladgername"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/md_light_blue_900"
                android:gravity="end"
                android:text="Amount"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtgrid"/>

            <TextView
                android:id="@+id/txtvochno"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="vochno"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Date"
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
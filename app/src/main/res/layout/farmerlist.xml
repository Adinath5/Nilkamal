<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person"
                android:src="@drawable/ic_person_black_24dp"/>

            <TextView
                android:id="@+id/txtpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/person"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/partyname"
                android:textColor="@color/md_light_blue_900"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfadd"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text="@string/_0_0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtfadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpname"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/person"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/partyname"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtbatch"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfadd"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/lblbatch"
                android:fontFamily="@font/poppinsregular"
                android:gravity="end"
                android:text=""
                android:textSize="14sp" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:gravity="start"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtglcoe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person"
                android:layout_below="@id/txtfadd"
                android:id="@+id/lblbatch"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/batchno"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/txtqty"
                android:layout_below="@id/txtfadd"
                android:id="@+id/lblplqt"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/birdplace"
                android:fontFamily="@font/poppinsregular"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
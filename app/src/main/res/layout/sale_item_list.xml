<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pilv2"
        android:layout_below="@id/cardview1"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:orientation="horizontal">
            <Button
                android:id="@+id/btndeleteitem"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="@string/delete_item"
                android:textColor="@color/md_red_900"
                android:backgroundTint="@color/md_white_1000"
                android:strokeColor="@color/md_red_900"/>
     </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:id="@+id/cardview1"
        style="@style/CardView">

        <TextView
            android:id="@+id/lblitemno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitemcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitemmfg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitemgstperc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitemmrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitemhsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/lblitempack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginStart="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="10dp"
            android:id="@+id/rl"
            android:background="#dde4dd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv1"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/product_name"
                        android:fontFamily="@font/gothic"
                        android:textColor="#3553F5"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/total_amount"
                        android:fontFamily="@font/gothic"
                        android:textColor="#3553F5"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv2"
                android:layout_below="@id/lv1"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemsubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/product_subtotal"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:visibility="visible"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv3"
                android:layout_below="@id/lv2"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemdiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/product_discount"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:visibility="visible"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv4"
                android:layout_below="@id/lv3"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemgst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/gst_amount"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblitemgstamt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/gst_total"
                        android:fontFamily="@font/gothic"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textStyle="normal"
                        android:gravity="end"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
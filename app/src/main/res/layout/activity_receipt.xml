<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_white_1000"
    tools:context=".Activity.ActivityReceipt">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apbar"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Base.PSTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/Base.PSTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plv1"
        app:layout_constraintBottom_toTopOf="@id/plv2"
        app:layout_constraintTop_toBottomOf="@id/apbar"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                android:elevation="10dp"
                android:padding="10dp"
                style="@style/CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="10dp"
                    android:id="@+id/rl"
                    android:background="#dde4dd">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblreceiptno"
                        android:text="Receipt Voucher No. :"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/gothic"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtreceiptno"
                        android:layout_toRightOf="@id/lblreceiptno"
                        android:text=""
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/gothic"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtvdate"
                        android:layout_alignParentRight="true"
                        android:text="01-03-2020"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/gothic"
                        android:drawableRight="@drawable/ic_today_black_24dp"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtrvdate"
                        android:layout_alignParentRight="true"
                        android:text="01-03-2020"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/gothic"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblvdate"
                        android:layout_toLeftOf="@id/txtvdate"
                        android:text="@string/date"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/gothic"
                        android:textStyle="normal"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/txtvdate"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:contentPadding="10dp">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lv1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/txtbill"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:text="@string/party"
                                        android:fontFamily="@font/gothic"
                                        android:textColor="#3553F5"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="10dp" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnadd"
                                        android:layout_width="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/txtbill"
                                        android:text="@string/select_account"
                                        android:textColor="@color/md_green_700"
                                        app:backgroundTint="@color/md_white_1000"
                                        app:cornerRadius="10dp"
                                        app:strokeColor="@color/md_blue_800"
                                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:id="@+id/txtsupname"
                                        android:layout_gravity="start"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:id="@+id/txtsupadd"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:id="@+id/txtspcontact"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:id="@+id/txtpbal"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:visibility="gone"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:id="@+id/txtgrid"
                                        android:layout_gravity="start"
                                        />

                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/card_view1"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:contentPadding="10dp">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lv3"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:text="To Received"
                                        android:id="@+id/lblramount"
                                        android:layout_gravity="start"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:text="@string/totalamount"
                                        android:textStyle="bold"
                                        android:id="@+id/lblnetamt"
                                        android:layout_gravity="start"
                                        />


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/txtreceivedamt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:textAlignment="textEnd"
                                        android:layout_marginTop="10dp"
                                        android:inputType="numberDecimal"
                                        android:text=""
                                        android:fontFamily="@font/gothic"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/card_view2"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:contentPadding="10dp">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lv4"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:text="Branch Name :"
                                        android:id="@+id/lblpaytype"
                                        android:layout_gravity="start"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <Spinner
                                        android:id="@+id/sppaytype"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:fontFamily="@font/gothic"
                                        android:textColor="#25383C"
                                        android:textSize="11sp"
                                        android:textStyle="normal"
                                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                                        android:layout_margin="10dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:background="@drawable/spinner_bg"
                                        android:dropDownWidth="300dp"
                                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                                        android:paddingRight="14dp"
                                        android:popupBackground="@android:color/white"
                                        android:popupElevation="3dp"
                                        android:stateListAnimator="@drawable/spinner_sla"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_below="@+id/card_view3"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:contentPadding="10dp">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lv6"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:text="@string/SaleInvoice_NarrationHint"
                                        android:id="@+id/lblnarration"
                                        android:layout_gravity="start"/>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/gothic"
                                        android:padding="5dp"
                                        android:hint="@string/SaleInvoice_NarrationHint"
                                        android:id="@+id/txtnarration"
                                        android:layout_gravity="start"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plv2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancle"
                android:clickable="true"
                android:id="@+id/btncanclerec"
                android:textColor="@color/global__primary"
                android:fontFamily="@font/gothicb"
                app:backgroundTint="@color/md_white_1000"
                app:cornerRadius="10dp"
                app:strokeColor="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:clickable="true"
                android:id="@+id/btnsaverec"
                android:textColor="@color/md_white_1000"
                android:fontFamily="@font/gothicb"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
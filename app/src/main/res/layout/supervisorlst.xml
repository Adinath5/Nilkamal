<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/person"
                android:src="@drawable/ic_person_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person"
                android:id="@+id/txtspname"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:text="Supervisor Name"
                android:fontFamily="@font/poppinsregular"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person"
                android:layout_below="@id/txtspname"
                android:id="@+id/txtspemail"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Email ID"
                android:fontFamily="@font/poppinsregular"/>


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:gravity="start"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtspcode"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person"
                android:layout_below="@id/txtspemail"
                android:id="@+id/txtspcontact"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Contact No.: "
                android:fontFamily="@font/poppinsregular"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
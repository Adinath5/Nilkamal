<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FeedTransferOut">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Base.PSTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/global__primary"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/Base.PSTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/plv2">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lv2"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtbill"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/PurchaseInvoice_BilledTo"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#3553F5"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp" />
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnadd"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/from_farmname"
                                    android:textColor="@color/md_green_700"
                                    app:backgroundTint="@color/md_white_1000"
                                    app:cornerRadius="10dp"
                                    app:strokeColor="@color/md_blue_800"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtsupname"
                                    android:layout_gravity="start"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtsupadd"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtspcontact"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtbatchno"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtfeedstk"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtbirdstk"
                                    android:layout_gravity="start"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtcity"
                                    android:layout_gravity="start"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txtdistrict"
                                    android:layout_gravity="start"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:visibility="gone"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/farmcode"
                                    android:layout_gravity="start"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtinvoice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:textAlignment="textEnd"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/PurchaseInvoice_InvoiceNo"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/invoice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/gothic"
                                    android:textAlignment="textEnd"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    />
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnaddto"
                                    android:layout_width="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/to_farmname"
                                    android:textColor="@color/md_green_700"
                                    app:backgroundTint="@color/md_white_1000"
                                    app:cornerRadius="10dp"
                                    app:strokeColor="@color/md_blue_800"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofarmname"
                                    android:layout_gravity="start"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofarmadd"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofcontact"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofbatch"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofpbal"
                                    android:layout_gravity="start"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttoftaluka"
                                    android:layout_gravity="start"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textAlignment="textStart"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofcity"
                                    android:layout_gravity="start"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:visibility="gone"
                                    android:fontFamily="@font/gothic"
                                    android:padding="5dp"
                                    android:id="@+id/txttofcode"
                                    android:layout_gravity="start"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lv2"
                            android:id="@+id/lv5"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtissuedate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/PurchaseInvoice_Dateofissue"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd"
                                    />
                                <TextView
                                    android:id="@+id/txtpurchaseno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/transferdcno"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#25383C"
                                    android:textAlignment="textEnd"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/datechoice3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="@string/date"
                                    android:maxLength="12"
                                    android:singleLine="true"
                                    android:drawableEnd="@drawable/ic_today_black_24dp"
                                    android:fontFamily="@font/gothic"
                                    android:textAlignment="textEnd"
                                    android:textColor="#25383C"
                                    android:textSize="15sp" />
                                <TextView
                                    android:id="@+id/billdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="12"
                                    android:singleLine="true"
                                    android:fontFamily="@font/gothic"
                                    android:visibility="gone"
                                    android:textSize="15sp" />
                                <EditText
                                    android:id="@+id/purchaseno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="8dp"
                                    android:hint="@string/transferdcno"
                                    android:fontFamily="@font/gothic"
                                    android:textAlignment="textEnd"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:autofillHints="" />
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/lv5"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/lineseperator"
                            />
                        <TextView
                            android:id="@+id/txtdescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/line"
                            android:text="@string/PurchaseInvoice_Decription"
                            android:fontFamily="@font/gothic"
                            android:textColor="#3553F5"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp" />
                        <TextView
                            android:id="@+id/txtline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/line"
                            android:text="@string/PurchaseInvoice_LineTotal"
                            android:fontFamily="@font/gothic"
                            android:textColor="#3553F5"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/nslit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtdescription"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </androidx.core.widget.NestedScrollView>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnadd1"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nslit"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/gothic"
                            android:text="@string/PurchaseInvoice_AddItem"
                            android:textColor="@color/md_green_700"
                            app:backgroundTint="@color/md_white_1000"
                            app:cornerRadius="10dp"
                            app:strokeColor="@color/md_blue_800" />
                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/txtdescription"
                            android:layout_below="@+id/btnadd1"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/line1"
                            android:id="@+id/lv4"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txttotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/PurchaseInvoice_Total"
                                    android:fontFamily="@font/gothicb"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textAlignment="textEnd"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="@string/_0_0"
                                    android:fontFamily="@font/gothicb"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textAlignment="textEnd" />

                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:id = "@+id/layoutnarration"
                            android:layout_below="@+id/lv4"
                            android:fontFamily="@font/gothic"
                            android:layout_marginTop = "15dp"
                            android:layout_marginStart = "10dp"
                            android:layout_marginEnd = "10dp"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:id = "@+id/narration"
                                android:hint = "@string/PurchaseInvoice_NarrationHint"
                                android:fontFamily="@font/gothic"
                                android:background="@drawable/rounded_border_edittext"
                                android:inputType = "text"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/plv2"
        android:orientation="horizontal"
        android:baselineAligned="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancle"
                android:clickable="true"
                android:id="@+id/btncanclefr"
                android:textColor="@color/global__primary"
                android:fontFamily="@font/gothicb"
                app:backgroundTint="@color/md_white_1000"
                app:cornerRadius="10dp"
                app:strokeColor="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:focusable="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:clickable="true"
                android:id="@+id/btnsavefeedr"
                android:textColor="@color/md_white_1000"
                android:fontFamily="@font/gothicb"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtprodname"
        android:layout_width="167dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtprodamt"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txtprodqty"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtprodname"
        android:layout_toRightOf="@+id/txtprodname" />

    <TextView
        android:id="@+id/txtprodrate"
        android:layout_width="74dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtprodqty"
        android:layout_toRightOf="@+id/txtprodqty" />
</RelativeLayout>
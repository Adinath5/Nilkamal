<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.FarmHistoy">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/global__primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtspname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="James Pratterson"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_light_blue_900" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtspcode"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_grey_600"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/spacing_xmedium"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:elevation="5dp"
                android:padding="5dp"
                style="@style/CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:id="@+id/rl"
                    android:background="@color/md_white_1000">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:contentPadding="10dp">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lv1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/txtfarmname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Farm Name"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/md_light_blue_900"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="10dp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="@color/md_light_blue_900"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:id="@+id/txtfname"
                                        android:layout_gravity="start"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="5dp"
                                        android:id="@+id/txtfadd"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="5dp"
                                        android:id="@+id/txtfarmtype"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="5dp"
                                        android:id="@+id/txtfbatch"
                                        android:layout_gravity="start"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="5dp"
                                        android:textColor="@color/md_light_blue_900"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:text="Voucher No"
                                        android:id="@+id/txtvochno"
                                        android:layout_gravity="start"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="textStart"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="5dp"
                                        android:id="@+id/txtglcode"
                                        android:visibility="gone"
                                        android:layout_gravity="start"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:id="@+id/line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/lv1"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/lineseperator"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/line"
                                android:id="@+id/lv3"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/lblplacebird"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Place Bird "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/lblplacedate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Place Date "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblfeedsupl"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Feed Sup.(Bag) "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblfeedcons"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Feed Cons.(Bag) "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblmortqty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Mortality Quantity "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblmortperc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Mortality %"
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Age "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:id="@+id/lblbalancebird"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="10dp"
                                        android:text="Balance Bird "
                                        android:fontFamily="@font/poppinsregular"
                                        android:textColor="#25383C"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtplacebird"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtplacedate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="31-12-2019"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/txtfeedsuplb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtfeedcons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtmortqty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtmortperc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/txtbalancebird"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:hint="0"
                                    android:textAlignment="textEnd"
                                    android:fontFamily="@font/poppinsregular"
                                    android:textColor="#25383C"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plv2"
        android:gravity="bottom"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancle"
                android:clickable="true"
                android:id="@+id/btncancle"
                android:textColor="@color/global__primary"
                android:fontFamily="@font/poppinsregular"
                app:backgroundTint="@color/md_white_1000"
                app:cornerRadius="10dp"
                app:strokeColor="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:focusable="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:clickable="true"
                android:id="@+id/btnnext"
                android:textColor="@color/md_white_1000"
                android:fontFamily="@font/poppinsregular"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/global__primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
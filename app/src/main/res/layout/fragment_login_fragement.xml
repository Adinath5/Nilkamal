<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Base.PSTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/Base.PSTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/bgImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/image_default__image"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="LogIn"
            android:layout_below="@+id/constraintLayout2"
            android:textColor="@color/md_red_900"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/image_default__image"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/app_name_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/imageView2"
            android:gravity="center"
            android:paddingBottom="@dimen/space_4"
            android:text="@string/app_name"
            android:textColor="@color/md_deep_purple_400"
            android:textSize="@dimen/font_h5_size"

            />

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/app_name_text2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corner_shape_for_login"
            android:orientation="vertical">

            <View
                android:id="@+id/view25"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"
                />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/baseline_profile_grey_24"
                android:drawablePadding="@dimen/space_16"
                android:hint="User Name"
                android:layout_below="@id/view25"
                android:layout_marginTop="10dp"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:isScrollContainer="true"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/space_16"
                android:paddingEnd="@dimen/space_16"
                android:singleLine="true"
                android:textColor="@color/text__primary"
                android:drawableLeft="@drawable/baseline_profile_grey_24" />



            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/baseline_lock"
                android:drawablePadding="@dimen/space_16"
                android:hint="Password"
                android:inputType="textPassword"
                android:isScrollContainer="true"
                android:layout_below="@id/nameEditText"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/space_16"
                android:paddingEnd="@dimen/space_16"
                android:singleLine="true"
                android:textColor="@color/text__primary"
                android:drawableLeft="@drawable/baseline_lock" />


            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/md_grey_300"/>



            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"/>



        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="@color/text__secondary"
            android:layout_below="@+id/registerButton"
            />



    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
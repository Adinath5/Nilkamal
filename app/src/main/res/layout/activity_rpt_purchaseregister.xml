<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.rpt_purchaseregister">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apbar"
        android:theme="@style/Base.PSTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/Base.PSTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/plv1"
        android:layout_below="@+id/apbar"
        android:layout_above="@id/plv2"
        android:backgroundTint="@color/md_white_1000"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:elevation="10dp"
            android:padding="10dp"
            style="@style/CardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="10dp"
                android:id="@+id/rl">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblreceiptno"
                    android:text="@string/selectperiod"
                    android:textSize="12sp"
                    android:layout_marginStart="10sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtsdate"
                    android:layout_toStartOf="@id/txtto"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstdate"
                    android:layout_toStartOf="@id/txtto"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtto"
                    android:layout_toStartOf="@id/txtedate"
                    android:text="To"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtedate"
                    android:layout_alignParentEnd="true"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtetdate"
                    android:layout_alignParentEnd="true"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/plv3"
                    android:layout_below="@id/txtto"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <ListView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plv2"
        android:background="@color/md_pink_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="10dp"
            android:id="@+id/r2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblouts"
                android:layout_toStartOf="@id/lblnettotal"
                android:text="@string/netamount"
                android:textSize="14sp"
                android:layout_marginEnd="10sp"
                android:padding="5dp"
                android:textAlignment="textEnd"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"
                android:gravity="end" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblnettotal"
                android:layout_alignParentEnd="true"
                android:text="0.00"
                android:textSize="14sp"
                android:layout_marginStart="10sp"
                android:padding="5dp"
                android:textAlignment="textEnd"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"
                android:gravity="end" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
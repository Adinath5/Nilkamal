<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plv1"
            android:gravity="top"
            android:layout_gravity="top"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lbldate"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:text="Date"
                        android:padding="5dp"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/txtdate"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="15dp"
                        android:hint="Date"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lbldate"
                        android:id="@+id/lblage"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:text="Age"
                        android:padding="5dp"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtdate"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/txtage"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="15dp"
                        android:hint="age"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblage"
                        android:id="@+id/lblreason"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_marginStart="5dp"
                        android:text="Product Name"
                        android:fontFamily="@font/poppinsregular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtage"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/txtreason"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_marginEnd="15dp"
                        android:textAlignment="textEnd"
                        android:hint="reason"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/lblmortqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblreason"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppinsregular"
                        android:padding="5dp"
                        android:text="Feed Bag Qty"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtreason"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/txtquantity"
                        android:textSize="14sp"
                        android:layout_marginEnd="15dp"
                        android:hint="Quantity"
                        android:padding="5dp"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:id="@+id/lblweight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblmortqty"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="Feed In Gram"
                        android:padding="5dp"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtquantity"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/txtfeedwt"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_marginEnd="15dp"
                        android:hint="Total"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblweight"
                        android:id="@+id/lblstandardw"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:hint="Standard Feed"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppinsregular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtstandwt"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginEnd="15dp"
                        android:hint="Balance"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_below="@id/txtfeedwt"
                        android:fontFamily="@font/poppinsregular"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>





    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
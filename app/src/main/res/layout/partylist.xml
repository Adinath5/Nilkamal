<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person"
                android:src="@drawable/ic_person_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/person"
                android:layout_toStartOf="@id/txtamount"
                android:id="@+id/txtpname"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtamount"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtsladdress"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtglcode"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtbaltype"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtcontactno"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txttaluke"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtcity"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtcontactperson"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtaclimit"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtroutname"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtacstatus"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text=""
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/gothic"
                android:id="@+id/txtpanno"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
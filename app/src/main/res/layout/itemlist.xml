<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblprodname"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:text="@string/productname"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtpname"
                android:layout_below="@id/lblprodname"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:text="@string/productname"
                android:textColor="@color/md_light_blue_900"
                android:fontFamily="@font/poppinsregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/category"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:gravity="end"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/lblcategory"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lblcategory"
                android:text="@string/category"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:gravity="end"
                android:textColor="@color/md_light_blue_900"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtcatname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/txtgrid"/>

            <TextView
                android:id="@+id/lblprate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtpname"
                android:gravity="start"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/purchaserate"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtprate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblprate"
                android:gravity="start"
                android:textColor="@color/md_light_blue_900"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/purchaserate"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtcatname"
                android:layout_alignParentEnd="true"
                android:id="@+id/lblsalerate"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:text="@string/saleserate"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblsalerate"
                android:layout_alignParentEnd="true"
                android:id="@+id/txtsrate"
                android:textSize="14sp"
                android:textColor="@color/md_light_blue_900"
                android:layout_marginEnd="10dp"
                android:text="@string/saleserate"
                android:fontFamily="@font/poppinsregular"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_white_1000"
    tools:context=".Activity.rpt_accountstatementone">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apbar"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Base.PSTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/Base.PSTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/plv1"
        app:layout_constraintTop_toBottomOf="@id/apbar"
        app:layout_constraintBottom_toTopOf="@id/plv2"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:elevation="10dp"
            android:padding="10dp"
            style="@style/CardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="10dp"
                android:id="@+id/rl"
                android:background="#dde4dd">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblreceiptno"
                    android:text="@string/selectperiod"
                    android:textSize="12sp"
                    android:layout_marginStart="10sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtsdate"
                    android:layout_toStartOf="@id/txtto"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstdate"
                    android:layout_toStartOf="@id/txtto"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtto"
                    android:layout_toStartOf="@id/txtedate"
                    android:text="To"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtedate"
                    android:layout_alignParentEnd="true"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/poppinsregular"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtetdate"
                    android:layout_alignParentEnd="true"
                    android:text="01-03-2020"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/gothic"
                    app:drawableRightCompat="@drawable/ic_today_black_24dp"
                    android:textStyle="normal"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/txtsdate"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lv1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtgrid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text=""
                                    android:visibility="gone"/>
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lblbankame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

                                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id = "@+id/txtbankname"
                                        android:hint = "@string/partyname"
                                        android:singleLine="true"
                                        android:fontFamily="@font/poppinsregular"
                                        android:inputType="textCapSentences"
                                        android:background="@drawable/rounded_border_edittext"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lv2"
                            android:layout_below="@id/lv1"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:elevation="10dp"
                                android:id="@+id/r3"
                                android:background="#dde4dd">
                                <TextView
                                    android:id="@+id/lbldate"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date1"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#3553F5"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp" />
                                <TextView
                                    android:id="@+id/lblparticular"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/particulars"
                                    android:layout_toEndOf="@id/lbldate"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#3553F5"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp" />
                                <TextView
                                    android:id="@+id/lbldebittran"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/debit"
                                    android:layout_toStartOf="@id/lblcredittran"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#3553F5"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="end"
                                    android:layout_marginEnd="10dp" />
                                <TextView
                                    android:id="@+id/lblcredittran"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/credit"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/gothic"
                                    android:textColor="#3553F5"
                                    android:textSize="12sp"
                                    android:textAlignment="textEnd"
                                    android:textStyle="bold"
                                    android:layout_marginStart="10dp"
                                    android:gravity="end" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/plv3"
                    android:layout_below="@id/card_view1"
                    android:orientation="vertical"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plv2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="10dp"
            android:id="@+id/r2"
            android:background="@color/md_pink_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbltotal"
                android:text="Total :"
                android:textSize="12sp"
                android:layout_marginStart="20sp"
                android:padding="5dp"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbldrtotal"
                android:layout_toStartOf="@id/lblcrtotal"
                android:text="0.00"
                android:textSize="12sp"
                android:layout_marginEnd="10sp"
                android:padding="5dp"
                android:gravity="end"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblcrtotal"
                android:layout_alignParentEnd="true"
                android:text="0.00"
                android:textSize="12sp"
                android:layout_marginStart="10sp"
                android:padding="5dp"
                android:gravity="end"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblouts"
                android:layout_below="@id/lblcrtotal"
                android:layout_toStartOf="@id/lblnettotal"
                android:text="@string/netoutstanding"
                android:textSize="12sp"
                android:layout_marginEnd="10sp"
                android:padding="5dp"
                android:gravity="end"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblnettotal"
                android:layout_below="@id/lblcrtotal"
                android:layout_alignParentEnd="true"
                android:text="0.00"
                android:textSize="12sp"
                android:layout_marginStart="10sp"
                android:padding="5dp"
                android:gravity="end"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="normal"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>